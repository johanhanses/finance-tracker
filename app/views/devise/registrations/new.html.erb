<h2 class="text-3xl font-bold mb-8 text-center">Sign up</h2>

<div class="w-full">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mx-auto max-w-md flex items-center justify-center mb-4">
      <%= f.label :email, class: "sr-only" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "w-full rounded-md" %>
    </div>

    <div class="mx-auto max-w-md flex items-center justify-center mb-4">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password, 6 characters minimum", class: "w-full rounded-md" %>
    </div>

    <div class="mx-auto max-w-md flex items-center justify-center mb-4">
      <%= f.label :password_confirmation, class: "sr-only" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "w-full rounded-md" %>
    </div>

    <div class="mx-auto max-w-md mb-4">
      <%= f.submit "Sign up", class: "w-full rounded-md py-2 bg-blue-500 text-white hover:bg-blue-400 transition-colors duration-300" %>
    </div>
  <% end %>
</div>

<div class="mx-auto max-w-md text-blue-500 flex space-x-4">
  <%= render "devise/shared/links" %>
</div>
