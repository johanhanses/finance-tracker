<h1 class="text-4xl font-bold mb-12">My Portfolio</h1>

<div>
  <h3 class="text-2xl mb-4">Search Stocks</h3>

  <%= form_with url: "/search-stock", method: :get, local: false do |form| %>
    <div class="max-w-lg w-full flex">
      <%= form.label :stock, class: "sr-only" %>
      <%= form.text_field :stock, placeholder: "Stock ticker symbol", class: "rounded-md flex-grow mr-8", autofocus: true %>

      <%= form.submit "Search", name: nil, class: "flex-grow rounded-md py-2 bg-blue-500 text-white hover:bg-blue-400 transition-colors duration-300"%>
    </div>
  <% end %>
</div>

<div id="results">
</div>

<%= render 'users/result' %>
